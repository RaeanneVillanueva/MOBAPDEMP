<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#f4f3d7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/custom_edit_text"
        >

        <LinearLayout
            android:id="@+id/health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mark_health"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/health" />

            <ProgressBar
                android:id="@+id/progressBar_health"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress"
                android:scaleY="0.5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/mark_social"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/social" />

            <ProgressBar
                android:id="@+id/progressBar_social"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/custom_progress"
                android:scaleY="0.5"
                android:progress="50"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mark_money"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/money" />

            <ProgressBar
                android:id="@+id/progressBar_money"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/custom_progress"
                android:scaleY="0.5"
                android:progress="50"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/grades_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mark_grades"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:alpha="0"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/grades" />

            <ProgressBar
                android:id="@+id/progressBar_grades"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/custom_progress"
                android:scaleY="0.5"
                android:progress="50"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_scenario"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="TextView"
            android:fontFamily="@font/pokemon"
            android:gravity="bottom|center"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="10dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="#030303"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="440sp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="390sp"
                android:layout_height="390sp"
                android:layout_gravity="center"
                android:background="@drawable/cardbg" />

            <com.yuyakaido.android.cardstackview.CardStackView
                android:id="@+id/card_stack_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="4dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/txt_character_name"
            android:layout_width="390sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            android:fontFamily="@font/bungee"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#030303"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/custom_edit_text"
        >

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bungee"
            android:textSize="15dp"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="#0E450D" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bungee"
            android:textSize="15dp"
            android:gravity="right"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="#0E450D" />
    </LinearLayout>

</LinearLayout>