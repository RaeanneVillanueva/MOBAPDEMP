<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:gravity="center"
    android:background="#f4f3d7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:padding="15dp"
        android:text="Lasallian Simulator"
        android:textColor="#71db77"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/etxt_username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/custom_edit_text"
        android:ems="5"
        android:fontFamily="@font/pokemon"
        android:hint="Username"
        android:textColor="#0E450D"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:padding="15dp"
        android:textSize="12dp"
        android:textCursorDrawable="@drawable/text_cursor"/>

    <EditText
        android:id="@+id/etxt_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_text"
        android:ems="5"
        android:fontFamily="@font/pokemon"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="30"
        android:padding="15dp"
        android:textColor="#0E450D"
        android:textSize="12dp"
        android:textCursorDrawable="@drawable/text_cursor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login"
            android:text="Login"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/bungee" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/bungee"
            android:onClick="openSignUpDialog"
            android:shadowColor="@android:color/transparent"
            android:text="Sign Up"
            android:textColor="#0E450D"
            android:textSize="15dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_google_signin"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/button_google_login"
        android:fontFamily="@font/bungee"
        android:text="Sign in with Google"
        android:textColor="#7f7f7f"
        android:drawableLeft="@drawable/google_icon"
        android:paddingLeft="20dp"
        android:textSize="18dp" />


</LinearLayout>