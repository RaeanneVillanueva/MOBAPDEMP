<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    tools:context=".CreateCardDialog"
    android:gravity="center">

    <Spinner
        android:id="@+id/spinner_characters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        />

    <TextView
        android:id="@+id/lblleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choice Left"
        android:fontFamily="@font/prstartk"
        android:padding="5dp"
        android:textColor="#0E450D"/>

    <EditText
        android:id="@+id/etxt_choice_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type choice left here.."
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edit_text"
        android:fontFamily="@font/pokemon"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/lblright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choice Right"
        android:fontFamily="@font/prstartk"
        android:padding="5dp"
        android:textColor="#0E450D"/>

    <EditText
        android:id="@+id/etxt_choice_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type choice right here.."
        android:padding="20dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/pokemon"
        android:background="@drawable/custom_edit_text"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/lblscenario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scenario"
        android:fontFamily="@font/prstartk"
        android:padding="5dp"
        android:textColor="#0E450D"/>

    <EditText
        android:id="@+id/etxt_scenario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center|start|top"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:hint="Type the scenario here.."
        android:fontFamily="@font/pokemon"
        android:background="@drawable/custom_edit_text"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/prstartk"
            android:text="Add"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/prstartk"
            android:text="Cancel"
            android:textColor="@android:color/white"
            />

    </LinearLayout>
</LinearLayout>