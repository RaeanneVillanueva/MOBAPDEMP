<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:id="@+id/card"
        android:layout_width="390sp"
        android:layout_height="420sp"
        android:layout_gravity="center"
        android:background="@drawable/scenariobg"
        android:foregroundGravity="center">

        <LinearLayout
            android:id="@+id/margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:gravity="center"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/cardImage"
                    android:layout_width="380sp"
                    android:layout_height="350dp"
                    android:padding="4dp"
                    android:scaleType="fitCenter" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/characterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prstartk"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/right_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:background="@drawable/choicesbg_right"
            android:fontFamily="@font/prstartk"
            android:gravity="left"
            android:padding="30dp"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/left_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:background="@drawable/choicesbg_left"
            android:fontFamily="@font/prstartk"
            android:gravity="right"
            android:padding="30dp"
            android:textColor="#FFFFFF" />

    </FrameLayout>

