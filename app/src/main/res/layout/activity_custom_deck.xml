<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomDeckActivity"
    android:background="#f4f3d7">

    <TextView
        android:id="@+id/txt_deck_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:padding="15dp"
        android:textSize="18dp"
        android:textColor="#0E450D"/>


    <ListView
        android:id="@+id/card_list_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/bungee"
            android:text="Add Card"
            android:textColor="@android:color/white"
            android:onClick="openAddCard"
            android:layout_weight="1"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/bungee"
            android:text="Save"
            android:textColor="@android:color/white"
            android:onClick="saveCustomDeck"
            android:layout_weight="1"
            android:textSize="15dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/bungee"
            android:onClick="closeCustomDeck"
            android:text="Close"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:textSize="15dp"/>

    </LinearLayout>

</LinearLayout>