<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f4f3d7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Deck Name"
        android:fontFamily="@font/prstartk"
        android:padding="10dp"
        android:textColor="#0E450D"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etxt_new_deck_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edit_text"
        android:fontFamily="@font/pokemon"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="20dp"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/prstartk"
            android:layout_weight="1"
            android:text="Edit"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_play_deck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/prstartk"
            android:layout_weight="1"
            android:text="Play"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/prstartk"
            android:layout_weight="1"
            android:text="Delete"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</LinearLayout>