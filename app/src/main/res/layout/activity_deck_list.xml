<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeckListActivity"
    android:background="@drawable/bg3">


    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:padding="20dp"
        android:text="Custom Decks"
        android:textColor="#0E450D"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spinner_deck_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:spinnerMode="dropdown" />

    <ListView
        android:id="@+id/deck_list_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:dividerHeight="10sp"
        android:divider="@android:color/transparent"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_create"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/bungee"
            android:textSize="15dp"
            android:text="Create Deck"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:onClick="createNewDeck" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/bungee"
            android:textSize="15dp"
            android:text="Close"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:onClick="closeCreateDeck" />
    </LinearLayout>

</LinearLayout>